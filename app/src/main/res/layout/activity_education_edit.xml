<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context="com.example.kerwinzhou.minilinkedin.EducationEditActivity">

    <EditText
        android:id="@+id/education_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="School"/>

    <EditText
        android:id="@+id/education_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Major"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/education_startDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="StartDate"/>

        <EditText
            android:id="@+id/education_endDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="EndDate"/>

    </LinearLayout>

    <EditText
        android:id="@+id/education_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Courses"/>
    <TextView
        android:id="@+id/education_edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_gravity="right"
        android:text="Delete"
        style="@style/AppTheme.NoActionBar"/>

</LinearLayout>
